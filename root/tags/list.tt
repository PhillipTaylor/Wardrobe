
[% WRAPPER base.tt
	title = "Browse Tags"
%]

<div class="content">
	<p>
		[% IF outfits.size %]
			List of available outfits
			<ul>
			[% FOREACH outfit = outfits -%]
				<li><a href="/tags/tag/[% outfit.outfit_id %]/[% outfit.name FILTER remove('/') | url %]">[% outfit.name | html %]</a></li>
			[% END %]
			</ul>
		[% ELSE %]
			There are no outfits
		[% END %]
	</p>
</div>
[% END %]
