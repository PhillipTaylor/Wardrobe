
[% WRAPPER base.tt
	title = "Browse Categories"
%]

<div class="content">
	<p>
		This page lists the clothing categories.
		Click on a category to drill into it.
	</p>
	<table>
		[% FOREACH category IN categories -%]
		<tr>
			<td><a href="category/[% category.id %]/[% category.name FILTER remove('/') | url %]">[% category.name | url %]</a></td>
		</tr>
		[% END -%]
	</table>
</div>
[% END %]
